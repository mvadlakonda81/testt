    <script>
        // small interactivity
        document.getElementById('year').textContent = new Date().getFullYear();

        function handleContact(e){
            e.preventDefault();
            const f = e.target;
            // basic validation
            if(!f.name.value || !f.email.value || !f.message.value){
                alert('Please fill required fields.');
                return false;
            }
            // fake submit
            alert('Thanks — message sent (demo).');
            f.reset();
            return false;
        }

        // project modal
        const projects = document.querySelectorAll('.project');
        const modal = document.getElementById('modal');
        const modalTitle = document.getElementById('modal-title');
        const modalDesc = document.getElementById('modal-desc');
        const modalImg = document.getElementById('modal-img');

        projects.forEach(p => p.addEventListener('click', () => {
            modalTitle.textContent = p.dataset.title || 'Project';
            modalDesc.textContent = p.dataset.desc || '';
            modalImg.style.background = p.dataset.img || 'linear-gradient(135deg,#4f46e5,#06b6d4)';
            openModal();
        }));

        function openModal(){ modal.classList.add('open'); modal.setAttribute('aria-hidden','false'); document.body.style.overflow='hidden'; }
        function closeModal(){ modal.classList.remove('open'); modal.setAttribute('aria-hidden','true'); document.body.style.overflow='auto'; }
        modal.addEventListener('click', (e)=>{ if(e.target === modal) closeModal(); });
        document.addEventListener('keydown', (e)=>{ if(e.key === 'Escape') closeModal(); });
    </script>
